<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/PassUIActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="PassUIActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/themePrimaryColour</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <color name="themePrimaryColour">#5A9139</color>
    <color name="themePrimaryColourDark">#2C471C</color>
    <color name="themeSecondaryColour">#A47336</color>
    <color name="themeTertiaryColour">#7F3347</color>

</resources>
